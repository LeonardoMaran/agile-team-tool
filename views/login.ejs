<body id="ibm-com" class="ibm-type" onload="onLoadPage()">
    <div id="ibm-top" style="display: block;" class="ibm-landing-page ibm-signin login-state-page sign-in cf">
        <!-- MAIN PAGE WRAPPER AROUND LEADSPACE, MAIN CONTENT SIDENAV AND RELATED CONTENT -->
        <div id="ibm-content-wrapper">
            <!-- LEADSPACE_BEGIN -->
            <div role="main" aria-labelledby="ibm-pagetitle-h1">
                <div id="ibm-pcon">
                    <div id="ibm-content">
                        <div id="ibm-content-body" class="ibm-id">
