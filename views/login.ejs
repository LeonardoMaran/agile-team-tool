    <script type="text/javascript">
    function startpage() {
        document.getElementById('username').focus();
    }

    function disableEnterKey(e) {
        var key;

        if (window.event)
            key = window.event.keyCode; //IE
        else
            key = e.which; //firefox

        if (key == 13) {
            document.getElementById('ngform-signin').submit();
            return false;
        } else
            return true;
    }
